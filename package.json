{
  "name": "photon-image-viewer",
  "productName": "Photon Image Viewer",
  "description": "Classic light-mode image viewer for macOS",
  "version": "0.0.2",
  "license": "MIT",
  "author": {
    "name": "sprout2000"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/photon-image-viewer.git"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:webpack dev:electron",
    "dev:webpack": "NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electronmon .",
    "build": "rimraf dist && NODE_ENV=\"production\" webpack --progress",
    "package": "ts-node builder.ts"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "leaflet": "^1.9.4",
    "mime-types": "^2.1.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/leaflet": "^1.9.13",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^18.19.57",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "css-loader": "^6.11.0",
    "electron": "^32.2.1",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "html-webpack-plugin": "^5.6.2",
    "mini-css-extract-plugin": "^2.9.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.1",
    "sass": "^1.80.3",
    "sass-loader": "^13.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
