{
  "name": "photon-image-viewer",
  "productName": "Photon Image Viewer",
  "description": "Classic light-mode image viewer for macOS",
  "version": "0.0.2",
  "license": "MIT",
  "author": {
    "name": "sprout2000"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/photon-image-viewer.git"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:rspack dev:electron",
    "dev:rspack": "rspack --node-env \"development\"",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electronmon .",
    "build": "rimraf dist && rspack --node-env \"production\"",
    "package": "ts-node builder.ts"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "leaflet": "^1.9.4",
    "mime-types": "^2.1.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@rspack/cli": "^1.1.4",
    "@rspack/core": "^1.1.4",
    "@types/leaflet": "^1.9.14",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.17.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "css-loader": "^7.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sass": "^1.81.0",
    "sass-loader": "^16.0.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  }
}
